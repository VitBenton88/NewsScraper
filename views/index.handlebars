{{#each articles}}
  <div class="container">

    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">{{this.headline}}</div>
        <div class="panel-body">
            <p>{{this.summary}}</p>
        </div>
        <!-- List group -->
        <ul class="list-group">
          {{#each dbArticle.comments}}
            <li class="list-group-item">{{this}}</li>
          {{/each}}
        </ul>

        <a class="btn" data-toggle="modal" target="_blank" href="{{this.link}}">
        <i class="fa fa-external-link fa-lg"></i> View Source</a>

        <a class="btn addComment" data-toggle="modal" data-article="{{this._id}}" data-target="#myModal" href="#">
        <i class="fa fa-plus fa-lg"></i> Add Comment</a>
        
        <a class="btn" href="#">
        <i class="fa fa-comments fa-lg"></i> View Comments</a>

    </div>
  </div>

{{/each}}
